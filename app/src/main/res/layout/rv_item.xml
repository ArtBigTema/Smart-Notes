<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_artist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_micro"
    android:layout_marginRight="@dimen/margin_micro"
    android:background="?colorAccent"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/padding_normal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_node_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_node"
            android:layout_toRightOf="@+id/iv_node"
            android:maxLines="2"
            android:padding="@dimen/padding_normal"
            android:text="@string/app_name"
            android:textSize="@dimen/font_rv_item" />

        <ImageView
            android:id="@+id/iv_node"
            android:layout_width="@dimen/image_view_size_small"
            android:layout_height="@dimen/image_view_size_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_micro"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

</android.support.v7.widget.CardView>